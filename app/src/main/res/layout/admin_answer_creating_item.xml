<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/questionCreatingAnswerKk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_outline"
            android:elevation="2dp"
            android:hint="Жауапты енгізіңіз"
            android:minHeight="48dp"
            android:padding="5dp"
            android:outlineSpotShadowColor="#00000000"
            android:paddingEnd="32dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/questionCreatingAnswerRu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_outline"
            android:elevation="1dp"
            android:hint="Введите ответ"
            android:minHeight="48dp"
            android:padding="5dp"
            android:outlineSpotShadowColor="#00000000"
            android:alpha="0.45"
            android:visibility="gone"
            android:layout_marginEnd="20dp"
            android:paddingEnd="32dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/questionCreatingAdd"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/baseline_add_circle_24"
            android:layout_gravity="center_vertical|end"
            android:elevation="6dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/questionCreatingRemove"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/baseline_remove_circle_24"
            android:layout_gravity="center_vertical|end"
            android:elevation="6dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"/>
    </FrameLayout>
    <Button
        android:id="@+id/isCorrect"
        android:layout_width="30.6dp"
        android:layout_height="39.6dp"
        android:layout_marginTop="56dp"
        android:alpha="0.45"
        android:layout_marginStart="10dp"
        android:background="@drawable/correct"/>

</FrameLayout>
