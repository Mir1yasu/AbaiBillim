<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:clickable="true"
    android:layout_marginBottom="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:elevation="2dp"
        android:background="@drawable/shape_exercise"
        android:backgroundTint="#3e0005"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ornament1"
            android:layout_gravity="center_vertical|end"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="54dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/exerciseId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:text="1 сабақ"
                android:fontFamily="@font/noto_sans_bold"/>
            <TextView
                android:id="@+id/exerciseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="Етістік алгоритмі"
                android:fontFamily="@font/noto_sans_bold"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/movingLayout"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:paddingTop="24dp"
        android:background="@drawable/shape_exercise"
        android:backgroundTint="#3e0005"
        android:paddingStart="54dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/exerciseCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="42sp"
                android:text="0"
                android:fontFamily="@font/noto_sans_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="42sp"
                android:text="/"
                android:fontFamily="@font/noto_sans_bold"/>
            <TextView
                android:id="@+id/exerciseCompletedOf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="42sp"
                android:text="0"
                android:fontFamily="@font/noto_sans_bold"/>
        </LinearLayout>

        <Button
            android:id="@+id/goToExplanation"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:background="@drawable/shape_exercise"
            android:backgroundTint="#fff"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:textColor="#3e0005"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:clickable="false"
            android:fontFamily="@font/noto_sans_bold"
            android:text="@string/begin"/>
    </FrameLayout>
</FrameLayout>