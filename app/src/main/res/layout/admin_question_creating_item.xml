<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#a0000005"
    android:layout_marginBottom="20dp"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/questionCreatingQuestionKk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_outline"
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:minHeight="48dp"
            android:elevation="5dp"
            android:hint="Введите вопрос"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/questionCreatingQuestionRu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_outline"
            android:padding="10dp"
            android:layout_marginEnd="5dp"
            android:minHeight="48dp"
            android:elevation="1dp"
            android:alpha="0.45"
            android:visibility="gone"
            android:hint="Введите вопрос"
            android:textSize="20sp"
            />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/questionAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>